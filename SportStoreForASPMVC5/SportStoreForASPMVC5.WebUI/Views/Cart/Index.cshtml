@model SportStoreForASPMVC.Domain.Entities.CartIndexViewModel

@{
    ViewBag.Title = "SportStrore youre Cart";
}

<h2> YourCart </h2>
<table class="table">
    <thead>
        <tr>
            <th class="text-center"> Qantyty</th>
            <th class="text-center">Item</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var line in Model.cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-center">@line.Productes.Name</td>
                <td class="text-right">@line.Productes.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity*line.Productes.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.cart.CalculateValue().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ResultURL">Continue Shopping</a>

</div>
