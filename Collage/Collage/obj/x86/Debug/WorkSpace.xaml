<Page
    x:Class="Collage.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Collage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="9*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.RowSpan="3" Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:ConnectionId='4' Name="Back"
                    Grid.Row="0"
                    Style="{StaticResource Navigation_button}"
                                            />
            <TextBlock  Style="{StaticResource NavigationText}"
                        Text="Back"
                        Grid.Row="0"/>


            <Button x:ConnectionId='5' Grid.Row="1" 
                    Name="LayoutMenu" 
                    Style="{StaticResource Navigation_button}"
                                            />

            <TextBlock  Style="{StaticResource NavigationText}"
                        Text="Layout"
                        Grid.Row="1"/>
            <Button x:ConnectionId='6' Grid.Row="2" 
                    Name="AspectMenu" 
                    Style="{StaticResource Navigation_button}"/>
            <TextBlock Style="{StaticResource NavigationText}"
                        Text="Back"
                        Grid.Row="2"/>
            <Button x:ConnectionId='7' Grid.Row="3" Name="AddMenu" 
                    Style="{StaticResource Navigation_button}"/>
            <TextBlock  Style="{StaticResource NavigationText}"
                        Text="Back"
                        Grid.Row="3"/>
            <Button x:ConnectionId='8' Grid.Row="4" Name="ExportMenu" 
                    Style="{StaticResource Navigation_button}"/>
            <TextBlock  Style="{StaticResource NavigationText}"
                        Text="Back"
                        Grid.Row="4"/>
            <Button x:ConnectionId='9' Grid.Row="5" Name="SaveMenu" 
                    Style="{StaticResource Navigation_button}"/>
            <TextBlock  Style="{StaticResource NavigationText}" 
                        Text="Back"
                        Grid.Row="5"/>
        </Grid>
        <Grid Grid.Column="1" Background="Black">
            <Grid x:ConnectionId='1' Margin="20" Background="White"
                                          
                                  
                  AllowDrop="True">
                <Button x:ConnectionId='2' x:Name="PictureButton"
            		                                                  
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
            		Background="Gray"
            		Width="auto"
                    Height="auto"
                    Margin="20">
                </Button>
                <Image x:ConnectionId='3' Name="Collage" 
                       Margin="20"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                                                              
                                                          
                                                                />
            </Grid>
        </Grid>
    </Grid>
</Page>

